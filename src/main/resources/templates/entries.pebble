{% extends "base" %}

{% block title %}{{ message('title.home') }}{% endblock %}

{% block content %}
<section class="posts">
    <h1 class="content-subhead">{{ message('title.home') }}</h1>
{% for entry in entries %}
        <article class="post">
            <header class="post-header">
                <h2 class="post-title">{{ entry.title }}</h2>
                <p class="post-meta">
                    <i class="fa fa-calendar" aria-hidden="true"></i> <time>{{ entry.date | date(message('tag.blog.date.format')) }}</time> <i class="fa fa-folder-open" aria-hidden="true"></i> {{ entry.category }} <i class="fa fa-tags" aria-hidden="true"></i> {{ entry.tags | join(',') }}
                </p>
            </header>
            <div class="post-description">
                <p>{{ entry.content }}</p>
            </div>
        </article>
{% else %}
        <p>{{ message('tag.blog.no_entries') }}</p>
{% endfor %}
</section>
{% endblock %}