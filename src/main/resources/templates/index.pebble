{% extends "base" %}

{% block title %} {{ message('titulo.inicio') }} {% endblock %}

{% block content %}
<div class="pure-u-1">
    <h1>{{ message('titulo.inicio') }}</h1>
    {% for entry in entries %}
        <article>
            <header>
                <h3>{{ entry.title }}</h3>
            </header>
            <p>{{ entry.content }}</p>
        </article>
    {% else %}
        <p>{{ message('blog.no_entradas') }}</p>
    {% endfor %}
</div>
{% endblock %}